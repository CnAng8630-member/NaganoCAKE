<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=devise-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="shadow-sm">
      <%= link_to root_path do %>
        <h1>ながのCAKE</h1>
      <% end %>

      <% if admin_signed_in? %>
        <li>
          <%= link_to admin_items_path do %>
            商品一覧
          <% end %>
        </li>
        <li>
          <%= link_to admin_customers_path do %>
            会員一覧
          <% end %>
        </li>
        <li>
          <%= link_to admin_root_path do %>
            注文履歴一覧
          <% end %>
        </li>
        <li>
          <%= link_to destroy_admin_session_path, method: :delete do %>
            ログアウト
          <% end %>
        </li>
      <% elsif customer_signed_in? %>
        <p>
          ようこそ、<%= current_customer.last_name %>さん！
        </p>
        <li>
          <%= link_to customers_mypage_path do %>
            マイページ
          <% end %>
        </li>
        <li>
          <%= link_to items_path do %>
            商品一覧
          <% end %>
        </li>
        <li>
          <%= link_to cart_items_path do %>
            カート
          <% end %>
        </li>
        <li>
          <%= link_to destroy_customer_session_path, method: :delete do %>
            ログアウト
          <% end %>
        </li>
      <% else %>
        <li>
          <%= link_to about_path do %>
            About
          <% end %>
        </li>
        <li>
          <%= link_to items_path do %>
            商品一覧
          <% end %>
        </li>
        <li>
          <%= link_to new_customer_registration_path do %>
            新規登録
          <% end %>
        </li>
        <li>
          <%= link_to new_customer_session_path do %>
            ログイン
          <% end %>
        </li>
      <% end %>
    </header>
    <%= yield %>
  </body>
</html>
