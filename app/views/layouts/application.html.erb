<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=devise-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="bg-light shadow-sm fixed-top">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <%= link_to root_path, class: "navbar-brand p-3 text-dark" do %>
            <h2>ながのCAKE</h2>
          <% end %>

          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if admin_signed_in? %>
                <li class="nav-item p-3 fs-6">
                  <%= link_to admin_items_path, class: "nav-link btn btn-outline-secondary text-dark", style: "width:80px" do %>
                    商品一覧
                  <% end %>
                </li>
                <li class="nav-item p-3">
                  <%= link_to admin_customers_path, class: "nav-link btn btn-outline-secondary text-dark", style: "width:80px" do %>
                    会員一覧
                  <% end %>
                </li>
                <li class="nav-item p-3">
                  <%= link_to admin_root_path, class: "nav-link btn btn-outline-secondary text-dark", style: "width:80px" do %>
                    注文履歴一覧
                  <% end %>
                </li>
                <li class="nav-item p-3">
                  <%= link_to destroy_admin_session_path, method: :delete, class: "nav-link btn btn-outline-secondary text-dark", style: "width:80px" do %>
                    ログアウト
                  <% end %>
                </li>
              <% elsif customer_signed_in? %>
                <p>
                  ようこそ、<%= current_customer.last_name %>さん！
                </p>
                <li class="nav-item p-3">
                  <%= link_to customers_mypage_path, class: "nav-link btn btn-outline-secondary text-dark", style: "width:80px" do %>
                    マイページ
                  <% end %>
                </li>
                <li class="nav-item p-3">
                  <%= link_to items_path, class: "nav-link btn btn-outline-secondary text-dark", style: "width:80px" do %>
                    商品一覧
                  <% end %>
                </li>
                <li class="nav-item p-3">
                  <%= link_to cart_items_path, class: "nav-link btn btn-outline-secondary text-dark", style: "width:80px" do %>
                    カート
                  <% end %>
                </li>
                <li class="nav-item p-3">
                  <%= link_to destroy_customer_session_path, method: :delete, class: "nav-link btn btn-outline-secondary text-dark", style: "width:80px" do %>
                    ログアウト
                  <% end %>
                </li>
              <% else %>
                <li class="nav-item p-3">
                  <%= link_to about_path, class: "nav-link btn btn-outline-secondary text-dark", style: "width:80px" do %>
                    About
                  <% end %>
                </li>
                <li class="nav-item p-3">
                  <%= link_to items_path, class: "nav-link btn btn-outline-secondary text-dark", style: "width:80px" do %>
                    商品一覧
                  <% end %>
                </li>
                <li class="nav-item p-3">
                  <%= link_to new_customer_registration_path, class: "nav-link btn btn-outline-secondary text-dark", style: "width:80px" do %>
                    新規登録
                  <% end %>
                </li>
                <li class="nav-item p-3">
                  <%= link_to new_customer_session_path, class: "nav-link btn btn-outline-secondary text-dark", style: "width:80px" do %>
                    ログイン
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <main>
      <div class="my-5 py-5 px-4">
        <%= yield %>
      </div>
    </main>

    <footer class="bg-light shadow-sm fixed-bottom">
      <div class="container my-4">
        <div class="row">
          <div class="mx-auto">
            <p>Nagano-CAKE</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
