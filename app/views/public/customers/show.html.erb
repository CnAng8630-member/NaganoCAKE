<div class="container">
  <div class="row my-3 pt-3">
    <div class="col-lg-3 ml-5">
      <h4 class="bg-light text-center" style="width:160px">マイページ</h4>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-2 mt-2">
      <h5 class="font-weight-bold">登録情報</h5>
    </div>

    <div class="col-lg-2">
      <%= link_to customers_information_edit_path, class: "btn btn-success" do %>
        編集する
      <% end %>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-lg-7">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th class="bg-light">氏名</th>
            <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
          </tr>
          <tr>
            <th class="bg-light">カナ</th>
            <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <th class="bg-light">郵便番号</th>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <th class="bg-light">住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th class="bg-light">電話番号</th>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <th class="bg-light">メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="container my-4">
  <div class="row">
    <div class="col-lg-2 mt-2">
      <h5 class="font-weight-bold">注文履歴</h5>
    </div>

    <div class="col-lg-2">
      <%= link_to orders_path, class: "btn btn-primary" do %>
        一覧を見る
      <% end %>
    </div>
  </div>
</div>