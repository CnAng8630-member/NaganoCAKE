<h2>新規会員登録</h2>

<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label "(姓)" %><br>
    <%= f.text_field :last_name, placeholder:"令和" %>
  </div>

  <div class="field">
    <%= f.label "(名)" %><br>
    <%= f.text_field :first_name, placeholder:"道子" %>
  </div>

  <div class="field">
    <%= f.label "(セイ)" %><br>
    <%= f.text_field :last_name_kana, placeholder:"レイワ" %>
  </div>

  <div class="field">
    <%= f.label "(メイ)" %><br>
    <%= f.text_field :first_name_kana, placeholder:"ミチコ" %>
  </div>

  <div class="field">
    <%= f.label "メールアドレス" %><br />
    <%= f.email_field :email, autocomplete: "email", placeholder:"sample@example.com" %>
  </div>

  <div class="field">
    <%= f.label "郵便番号(ハイフンなし)" %><br>
    <%= f.text_field :postal_code, placeholder:"0000000" %>
  </div>

  <div class="field">
    <%= f.label "住所" %><br>
    <%= f.text_field :address, size: 50, placeholder:"東京都渋谷区代々木神園町0-0" %>
  </div>

  <div class="field">
    <%= f.label "電話番号(ハイフンなし)" %><br>
    <%= f.text_field :telephone_number, placeholder:"0000000000" %>
  </div>

  <div class="field">
    <%= f.label "パスワード(6文字以上)" %><br>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label "パスワード(確認用)" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "新規登録" %>
  </div>
<% end %>

<h2>既に登録済みの方</h2>
<p><%= link_to "こちら", new_customer_session_path %>からログインしてください。</p>
