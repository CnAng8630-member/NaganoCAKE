<div class="container">
  <div class="row my-3 pt-3">
    <div class="col-lg-3 ml-5">
      <h4 class="bg-light text-center" style="width:190px">新規会員登録</h4>
    </div>
  </div>
</div>

<div class="container">
  <%= form_with model: @customer, url: customer_registration_path do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>

    <div class="form-group row">
      <div class="col-lg-3 col-form-label"><%= f.label "氏名" %></div>
      <div class="col-lg-3 input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text">姓</span>
        </div>
        <%= f.text_field :last_name, placeholder:"令和", class:"form-control" %>
      </div>
      <div class="col-lg-3 input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text">名</span>
        </div>
        <%= f.text_field :first_name, placeholder:"道子", class:"form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-lg-3 col-form-label"><%= f.label "フリガナ" %></div>
      <div class="col-lg-3 input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text">セイ</span>
        </div>
        <%= f.text_field :last_name_kana, placeholder:"レイワ", class:"form-control" %>
      </div>
      <div class="col-lg-3 input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text">メイ</span>
        </div>
        <%= f.text_field :first_name_kana, placeholder:"ミチコ", class:"form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-lg-3 col-form-label"><%= f.label "メールアドレス" %></div>
      <div class="col-lg-3 mb-3">
        <%= f.text_field :email, placeholder:"sample@example.com", class:"form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-lg-3 col-form-label"><%= f.label "郵便番号(ハイフンなし)" %></div>
      <div class="col-lg-3 mb-3">
        <%= f.text_field :postal_code, placeholder:"0000000", class:"form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-lg-3 col-form-label"><%= f.label "住所" %></div>
      <div class="col-lg-6 mb-3">
        <%= f.text_field :address, size: 50, placeholder:"東京都渋谷区代々木神園町0-0", class:"form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-lg-3 col-form-label"><%= f.label "電話番号(ハイフンなし)" %></div>
      <div class="col-lg-3 mb-3">
        <%= f.text_field :telephone_number, placeholder:"0000000000", class:"form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-lg-3 col-form-label"><%= f.label "パスワード(6文字以上)" %></div>
      <div class="col-lg-3 mb-3">
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-lg-3 col-form-label"><%= f.label "パスワード(確認用)" %></div>
      <div class="col-lg-3 mb-3">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
      </div>
    </div>

    <div class="actions row justify-content-center">
      <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>
  <% end %>
</div>

<div class="container">
  <div class="row my-3 pt-3">
    <div class="col-lg-3 ml-5">
      <h4 class="bg-light text-center" style="width:240px">既に登録済みの方</h4>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-lg-6 text-center">
      <%= link_to "こちら", new_customer_session_path %>からログインしてください。
    </div>
  </div>
</div>