<div class="container">
  <div class="row my-3 pt-3">
    <div class="col-lg-3 ml-5">
      <h4 class="bg-light text-center" style="width:190px">注文履歴一覧</h4>
    </div>
  </div>
</div>

<div class="container mb-4 pt-2">
  <div class="row justify-content-center">
    <div class="col-lg-11">
      <table class="table table-bordered">
        <thead class="thead-light">
          <th>注文日</th>
          <th style="width:40%">配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>注文詳細</th>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
              <td>
                〒<%= order.shipping_post_code %><br>
                <%= order.shipping_address %><br>
                <%= order.shipping_name %>
              </td>

              <td>
                <% order.order_items.each do |order_item| %>
                  <%= order_item.item.name %><br>
                <% end %>
              </td>
              <td><%= order.subtotal.to_s(:delimited) %>円</td>
              <td>
                <%= link_to order_path(order.id), class: "btn btn-primary" do %>
                  表示する
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>