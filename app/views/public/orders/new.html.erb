<div class="container">
  <div class="row my-3 pt-3">
    <div class="col-lg-3 ml-5">
      <h4 class="bg-light text-center" style="width:190px">注文情報入力</h4>
    </div>
  </div>
</div>

<div class="container">
  <%= form_with model: @order, url: confirm_orders_path do |f| %>
    <div class="form-group row ml-3">
      <div class="col-lg-10 col-form-label"><%= f.label "支払方法", class: "h5 font-weight-bold" %></div>
      <div class="col-lg-8 ml-5 pl-3 custom-control custom-radio custom-control-inline">
        <%= f.radio_button :payment_method, "credit_card", checked: true, class: "custom-control-input" %>
        <%= f.label :payment_method_credit_card, "クレジットカード", class: "custom-control-label" %>
      </div>
      <div class="col-lg-8 mt-1 ml-5 pl-3 custom-control custom-radio custom-control-inline">
        <%= f.radio_button :payment_method, "transfer", class: "custom-control-input" %>
        <%= f.label :payment_method_transfer, "銀行振込", class: "custom-control-label" %>
      </div>
    </div>

    <div class="form-group row ml-3">
      <div class="col-lg-10 col-form-label"><%= f.label "お届け先", class: "h5 font-weight-bold" %></div>
      <div class="col-lg-8 ml-4">
        〒<%= @customer.postal_code %> <%= @customer.address %><br>
        <%= @customer.last_name %><%= @customer.first_name %>
      </div>
    </div>

    <div class="row justify-content-center mt-5 mb-4">
      <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>