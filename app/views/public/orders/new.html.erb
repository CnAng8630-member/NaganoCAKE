<h2>注文情報入力</h2>

<%= form_with model: @order, url: confirm_orders_path do |f| %>
  <h3>支払方法</h3>
  <%= f.radio_button :payment_method, "credit_card", checked: true %>
  <%= f.label :payment_method_credit_card, "クレジットカード" %>
  <%= f.radio_button :payment_method, "transfer" %>
  <%= f.label :payment_method_transfer, "銀行振込" %>

  <h3>お届け先</h3>
  <p><%= @customer.postal_code %></p>
  <p><%= @customer.address %></p>
  <p><%= @customer.last_name %><%= @customer.first_name %></p>

  <%= f.submit "確認画面へ進む" %>
<% end %>