<div class="container my-4">
  <div class="row">
    <div class="col-lg-12 d-flex justify-content-center">
      <div class="card" style="max-width: 600px;">
        <%= image_tag 'asia', class:"card-img", style:"width:600px" %>
        <div class="card-img-overlay d-flex justify-content-center align-items-center" style="background-color:rgba(0,0,0,0.4)">
          <p class="text-white">
            ようこそ、ながのCAKEへ！<br>
            このサイトは、ケーキ販売のECサイトになります。<br>
            会員でない方も商品の閲覧はできますが、<br>
            購入には会員登録が必要になります。
          </p>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-4 ml-5 text-center">
      <h3>
        <strong>新着商品</strong>
      </h3>
    </div>
  </div>
</div>

<div class="container mt-3">
  <div class="row justify-content-center">
    <% @items.each do |item| %>
      <div class="col-lg-2">
        <%= link_to item_path(item.id) do %>
          <%= image_tag item.get_image(100,100) %>

          <p class="text-body"><%= item.name %></p>

          <p class="text-body">¥<%= item.add_tax_price.to_s(:delimited) %></p>
        <% end %>
      </div>
    <% end %>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col-lg-10 d-flex justify-content-end">
      <%= link_to items_path do %>
        全ての商品を見る >
      <% end %>
    </div>
  </div>
</div>