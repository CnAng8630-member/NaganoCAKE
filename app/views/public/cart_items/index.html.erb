<div class="container">
  <div class="row my-3 pt-3">
    <div class="col-lg-5 ml-5">
      <h4 class="bg-light text-center" style="width:260px">ショッピングカート</h4>
    </div>

    <div class="col-lg-6 d-flex justify-content-end">
      <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, "data-confirm" => "カートを空にしますか？", class: "btn btn-danger" %>
    </div>
  </div>
</div>

<div class="container pt-2">
  <div class="row justify-content-center">
    <div class="col-lg-11">
      <table class="table table-bordered">
        <thead class="thead-light">
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </thead>

        <tbody>
          <% @cart_items.each do |cart_item| %>
            <tr>
              <td><%= image_tag cart_item.item.get_image(60,60) %> <%= cart_item.item.name %></td>
              <td><%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
              <td>
                <%= form_with model: cart_item, url: cart_item_path(cart_item.id) do |f| %>
                  <div class="form-group row">
                    <div class="col-lg-5">
                      <%= f.select :amount, *[1..10], {}, class: "form-control" %>
                    </div>

                    <div class="col-lg-4">
                      <%= f.submit "変更", class: "btn btn-success" %>
                    </div>
                  </div>
                <% end %>
              </td>
              <td><%= cart_item.subtotal.to_s(:delimited) %></td>
              <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger" %></td>
              <% @total += cart_item.subtotal %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="container mt-2">
  <div class="row ml-5">
    <div class="col-lg-7 mt-2">
      <%= link_to root_path, class: "btn btn-primary" do %>
        買い物を続ける
      <% end %>
    </div>

    <div class="col-lg-4 ml-4">
      <table class="table table-bordered">
        <tbody>
          <th class="bg-light">合計金額</th>
          <td><%= @total.to_s(:delimited) %></td>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="container mt-3 mb-4 d-flex justify-content-center">
  <%= link_to new_order_path, class: "btn btn-success" do %>
    注文情報入力に進む
  <% end %>
</div>