<h2>注文履歴詳細</h2>

<div>
  <h3>購入者</h3>
  <%= link_to admin_customer_path(@order.customer.id) do %>
    <p><%= @order.customer.last_name %> <%= @order.customer.first_name %></p>
  <% end %>

  <h3>注文日</h3>
  <p><%= @order.created_at.strftime('%Y/%m/%d') %></p>

  <h3>配送先</h3>
  <p>〒<%= @order.shipping_post_code %></p>
  <p><%= @order.shipping_address %></p>
  <p><%= @order.shipping_name %></p>

  <h3>支払方法</h3>
  <p><%= @order.payment_method_i18n %></p>
</div>

<table>
  <thead>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
  </thead>

  <tbody>
    <% @order.order_items.each do |order_item| %>
      <tr>
        <td><%= order_item.item.name %></td>
        <td><%= order_item.tax_included_price %></td>
        <td><%= order_item.amount %></td>
      </tr>
    <% end %>
  </tbody>
</table>