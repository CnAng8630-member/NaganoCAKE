<div class="container">
  <div class="row my-3 pt-3">
    <div class="col-lg-2 ml-5">
      <h4 class="bg-light text-center" style="width:140px">商品詳細</h4>
    </div>
  </div>
</div>

<div class="container">
  <div class="row ml-5">
    <div class="col-lg-3 ml-3">
      <%= image_tag @item.get_image(200,200) %>
    </div>

    <div class="col-lg-8">
      <%= form_with model: @item do |f| %>
        <div class="form-group row">
          <div class="col-lg-2 ml-5 col-form-label">
            <small>商品名</small>
          </div>
          <div class="col-lg-9 mt-2">
            <%= @item.name %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-lg-2 ml-5 col-form-label">
            <small>商品説明</small>
          </div>
          <div class="col-lg-9 mt-2">
            <%= @item.introduction %>
          </div>
        </div>

        <div class="form-group row">
          <div class="col-lg-2 ml-5 col-form-label">
            <small>
              税込価格<br>
              (税抜価格)
            </small>
          </div>
          <div class="col-lg-9 mt-3">
            <%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)<small>円</small>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="container mt-5">
  <div class="row justify-content-center">
    <%= link_to edit_admin_item_path, class: "btn btn-success" do %>
      編集する
    <% end %>
  </div>
</div>