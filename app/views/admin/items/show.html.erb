<div class="container">
  <div class="row my-3 pt-3">
    <div class="col-lg-3 ml-5">
      <h4 class="bg-light text-center">商品詳細</h4>
    </div>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-3">
      <%= image_tag @item.get_image(200,200) %>
    </div>

    <%= form_with model: @item do |f| %>
      <div class="form-group row justify-content-center">
        <div class="col-lg-4 col-form-label">
          <small>商品名</small>
        </div>
        <div class="col-lg-5 mt-2">
          <%= @item.name %>
        </div>
      </div>

      <div class="form-group row justify-content-center">
        <div class="col-lg-4 col-form-label">
          <small>商品説明</small>
        </div>
        <div class="col-lg-5">
          <%= f.text_field :introduction, class:"form-control-plaintext" %>
        </div>
      </div>

      <div class="form-group row justify-content-center">
        <div class="col-lg-4 col-form-label">
          <small>
            税込価格<br>
            (税抜価格)
          </small>
        </div>
        <div class="col-lg-5">
          <%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円
        </div>
      </div>
    <% end %>
  </div>
</div>

<div>
  <table>
    <thead>
      <th></th>
      <th>

      </th>
    </thead>

    <tbody>
      <tr>
        <td></td>
      </tr>
    </tbody>
  </table>
</div>

