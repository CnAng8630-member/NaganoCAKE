<div class="container">
  <div class="row my-3 pt-3">
    <div class="col-lg-3 ml-5">
      <h4 class="bg-light text-center">商品編集</h4>
    </div>
  </div>
</div>

<% if @item.errors.any? %>
  <%= @item.errors.count %>件のエラーが発生しました。
  <ul>
    <% @item.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <%= form_with model: @item, url: admin_item_path do |f| %>
    <div class="form-group row justify-content-center">
      <div class="col-lg-2 col-form-label"><%= f.label "商品画像" %></div>
      <div class="col-lg-4">
        <%= f.file_field :image, accept: "image/*" %>
      </div>
    </div>

    <div class="form-group row justify-content-center">
      <div class="col-lg-2 col-form-label"><%= f.label "商品名" %></div>
      <div class="col-lg-4">
        <%= f.text_field :name, placeholder:"商品名", class:"form-control" %>
      </div>
    </div>

    <div class="form-group row justify-content-center">
      <div class="col-lg-2 col-form-label"><%= f.label "商品説明" %></div>
      <div class="col-lg-4">
        <%= f.text_area :introduction, placeholder:"ここに説明文を記述します", class:"form-control" %>
      </div>
    </div>

    <div class="form-group row justify-content-center">
      <div class="col-lg-2 col-form-label"><%= f.label "税抜価格" %></div>
      <div class="col-lg-4 input-group mb-3">
        <%= f.number_field :price, placeholder:"1000", class:"form-control" %>
        <div class="input-group-append">
          <span class="input-group-text">円</span>
        </div>
      </div>
    </div>

    <div class="row justify-content-center">
      <%= f.submit "変更を保存", class: "btn btn-success" %>
    </div>
  <% end %>
</div>