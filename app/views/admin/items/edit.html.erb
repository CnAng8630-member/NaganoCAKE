<h3>商品編集</h3>

<%= form_with model: @item, url: admin_item_path do |f| %>
  <p>商品画像</p>
  <%= f.file_field :image, accept: "image/*" %>

  <p>商品名</p>
  <%= f.text_field :name, placeholder:"商品名" %>

  <p>商品説明</p>
  <%= f.text_area :introduction, placeholder:"ここに説明文を記述します" %>

  <p>税抜価格</p>
  <%= f.number_field :price, placeholder:"1000" %>円

  <%= f.submit "変更を保存" %>
<% end %>