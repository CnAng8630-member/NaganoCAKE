<div>
  <h3>商品一覧</h3>
  <%= link_to new_admin_item_path do %>
    新規登録
  <% end %>
</div>

<div>
  <p>商品ID</p>
  <p>商品名</p>
  <p>税抜価格</p>

  <% @items.each do |item| %>
    <div>
      <p><%= item.id %></p>

      <%= link_to admin_item_path(item.id) do %>
        <p><%= item.name %></p>
      <% end %>

      <p><%= item.price %></p>
    </div>
  <% end %>
</div>