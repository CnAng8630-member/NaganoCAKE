<div class="container">
  <div class="row my-3 pt-3">
    <div class="col-lg-2 ml-5">
      <h4 class="bg-light text-center" style="width:140px">商品一覧</h4>
    </div>
    <div class="col-lg-9 text-right">
      <%= link_to new_admin_item_path, class: "btn btn-light rounded-circle pt-2 pb-0 text-dark shadow-sm" do %>
        <h4>＋</h4>
      <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <table class="table">
        <thead class="thead-light">
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
        </thead>

        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>

              <td>
                <%= link_to admin_item_path(item.id) do %>
                  <%= item.name %>
                <% end %>
              </td>

              <td><%= item.price.to_s(:delimited) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-12 mx-auto d-flex justify-content-center">
      <%= paginate @items %>
    </div>
  </div>
</div>