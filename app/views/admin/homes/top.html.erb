<div class="container">
  <div class="row my-3 pt-3">
    <div class="col-lg-3 ml-5">
      <h4 class="bg-light text-center" style="width:190px">注文履歴一覧</h4>
    </div>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <table class="table">
        <thead class="thead-light">
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td>
                <%= link_to admin_order_path(order.id) do %>
                  <%= order.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
                <% end %>
              </td>

              <td><%= order.customer.last_name %><%= order.customer.first_name %></td>

              <td><%= order.order_items.sum(:amount) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-12 mx-auto d-flex justify-content-center">
      <%= paginate @orders %>
    </div>
  </div>
</div>