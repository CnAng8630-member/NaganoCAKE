<div class="container">
  <div class="row mt-3 pt-3">
    <div class="col-lg-3 ml-5">
      <h4 class="bg-light text-center">管理者ログイン</h4>
    </div>
  </div>
</div>

<div class="container my-5">
  <%= form_with model: @admin, url: admin_session_path do |f| %>
    <div class="form-group row justify-content-center">
      <div class="col-lg-2 col-form-label"><%= f.label "メールアドレス" %></div>
      <div class="col-lg-6">
        <%= f.email_field :email, autocomplete: "email", placeholder:"sample@example.com", class:"form-control" %>
      </div>
    </div>

    <div class="form-group row justify-content-center">
      <div class="col-lg-2 col-form-label"><%= f.label "パスワード" %></div>
      <div class="col-lg-6">
        <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
      </div>
    </div>

    <div class="actions row justify-content-center">
      <%= f.submit "ログイン", class: "btn btn-primary mt-3" %>
    </div>
  <% end %>
</div>