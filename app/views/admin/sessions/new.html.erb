<div class="container">
  <div class="ml-5">
    <h4>管理者ログイン</h4>
  </div>
</div>

<div class="container mx-auto my-5">
  <%= form_with model: @admin, url: admin_session_path do |f| %>
    <div class="form-group row">
      <div class="col-lg-4"><%= f.label "メールアドレス" %></div>
      <div class="col-lg-8">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"sample@example.com" %>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-lg-4"><%= f.label "パスワード" %></div>
      <div class="col-lg-8"><%= f.password_field :password, autocomplete: "current-password" %></div>
    </div>

    <div class="actions">
      <%= f.submit "ログイン", class: "btn btn-primary mt-3" %>
    </div>
  <% end %>
</div>