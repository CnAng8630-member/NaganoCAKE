<div class="container">
  <div class="row my-3 pt-3">
    <div class="col-lg-2 ml-5">
      <h4 class="bg-light text-center" style="width:140px">会員一覧</h4>
    </div>
  </div>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <table class="table">
        <thead class="thead-light">
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </thead>

        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>

              <td>
                <%= link_to admin_customer_path(customer.id) do %>
                  <%= customer.last_name %><%= customer.first_name %>
                <% end %>
              </td>

              <td><%= customer.email %></td>

              <td>
                <% if customer.is_active %>
                  <strong class="text-success">有効</strong>
                <% else %>
                  <strong class="text-black-50">退会</strong>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-12 mx-auto d-flex justify-content-center">
      <%= paginate @customers %>
    </div>
  </div>
</div>