<h3>会員一覧</h3>

<table>
  <thead>
    <th>会員ID</th>
    <th>氏名</th>
    <th>メールアドレス</th>
    <th>ステータス</th>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>

        <td>
          <%= link_to admin_customer_path(customer.id) do %>
            <%= customer.last_name %><%= customer.first_name %>
          <% end %>
        </td>

        <td><%= customer.email %></td>

        <td><%= customer.is_active ? "有効" : "退会" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @customers %>